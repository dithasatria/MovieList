    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.movielist.activity.PhotoActivity">

    <RelativeLayout
        android:background="#000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
